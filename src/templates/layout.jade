doctype
html
  head
    meta(charset='utf-8')
    meta(name='description' content= question)
    title= title
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='../../css/tomorrow.css')
    link(rel='stylesheet' href='../../css/question.css')
  body.light
    header
      h1= question
    ul.tags
      each tag in tags
        -
          var list = ['8', '9', 'A', 'B', 'C', 'D', 'E'];
          var color = [1,2,3,4,5,6];
          var str = 'background-color: #' + color.map(function() { return list[Math.floor(Math.random() * 6)]; }).join('');

        li(style="#{str}")= tag
    main
      != contents
    aside
      nav
        ul
          //- li.theme Night
          li
            a.index(href='../../index.html') Index
    //- script(type='text/javascript' src='../../js/switch-theme.js')
    script(type='text/javascript' src='../../js/anchor.js' async)
